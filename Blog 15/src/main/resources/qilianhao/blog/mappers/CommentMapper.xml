<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qilianhao.blog.dao.CommentDao">
	<resultMap type="Comment" id="CommentResult">
		<result property="id" column="id"/>
		<result property="userIp" column="userIp"/>
		<result property="content" column="content"/>
		<result property="commentDate" column="commentDate"/>
		<result property="state" column="state"/>
		<association property="blog" column="blogId" select="qilianhao.blog.dao.BlogDao.findById"></association>
	</resultMap>
	
	<select id="list" parameterType="Map" resultMap="CommentResult">
		select * from t_comment 
		<where>
		    <if test="blogId!=null">
				and blogId=#{blogId}
			</if>
			<if test="state!=null">
				and state=#{state}
			</if>
		</where>
		order by commentDate desc
	</select>
	
	<select id="listAdmin" parameterType="Map" resultMap="CommentResult">
		select * from t_comment 
		<where>
			<if test="content!=null and content!=''">
				and content like #{content}
			</if> 
		</where>
		order by id asc
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if> 
	</select>
	
	<select id="listReview" parameterType="Map" resultMap="CommentResult">
		select * from t_comment where state=0 order by id asc
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	

	<insert id="add" parameterType="Comment">
		insert into t_comment values(null,#{userIp},#{blog.id},#{content},now(),0);
	</insert>
	
	<select id="getTotal" parameterType="Map" resultType="Long">
		select count(*) from t_comment
	</select>
	
	<delete id="delete" parameterType="Integer">
		delete from t_comment where id=#{id}
	</delete>
	
	<update id="update" parameterType="Comment">
		update t_comment
		<set>
			<if test="state!=null">
				state=#{state},
			</if>
		</set>
		where id=#{id}
	</update>

</mapper> 